<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Tell IIS to pass all requests to Node via iisnode using server.js -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- Rewrite all URLs to server.js so Express can handle routing -->
    <rewrite>
      <rules>
        <rule name="DynamicContent" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Make sure Node/Express responses are not overridden by IIS error pages -->
    <httpErrors existingResponse="PassThrough" />

    <!-- Enable iisnode logging (optional but helpful for debugging) -->
    <iisnode loggingEnabled="true" />
  </system.webServer>
</configuration>
